print('=*' * 11)
print('SEQUÊCIA DE FIBONACCI')
print('=*' * 11)
numero = int(input('Quantos termos você quer mostrar? '))
contador = 3
primeiroTermo = 0
segundoTermo = 1
print('~' * 1000)
print('{} → {}'.format(primeiroTermo, segundoTermo), end='')

while contador <= numero:
    fibonacci = primeiroTermo + segundoTermo
    print(' → {:,}'.format(fibonacci), end='')
    primeiroTermo = segundoTermo
    segundoTermo = fibonacci
    contador += 1
print(' → FIM!')
print('~' * 1000)
